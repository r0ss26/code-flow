<div class="column is-one-fifth">
  <div class="card">
    <header class="card-header">
      <p class="card-header-title is-centered">
        <%= listing.title %>
      </p>
    </header>
    <div class="card-image">
      <figure class="image is-4by3">
        <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
      </figure>
    </div>
    <div class="card-content">
      <div class="media">
        <div class="media-left">
          <figure class="image is-48x48">
            <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
          </figure>
        </div>
        <div class="media-content">
          <p class="title is-4"><%= "#{listing.user.first_name} #{listing.user.middle_name[0]}. #{listing.user.last_name}" %></p>
          <p class="subtitle is-6"><%= listing.price %></p>
        </div>
      </div>

      <div class="content">
        <%= listing.description %>.
        <br>
        <time datetime="<%= listing.updated_at %>"><%= listing.updated_at.localtime.to_formatted_s(:short) %></time>
      </div>
    </div>
    <footer class="card-footer">
      <%= link_to "View Listing", listing_path(listing), class: "card-footer-item" %>
      <%= link_to "Purchase", new_listing_order_path(listing), class: "card-footer-item" %>
  </footer>
  </div>
</div>