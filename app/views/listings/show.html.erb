<div class="columns">
  <div class="column is-half">
    <div class="box">
    <div class="media-content">
      <div class="content">
        <div class="title"><%= @listing.title %></div>  
        <div class="subtitle">
        <%= "#{@listing.user.first_name} #{@listing.user.middle_name[0]}. #{@listing.user.last_name}" %>
        <figure class="image is-48x48">
            <img class="is-rounded" src="https://bulma.io/images/placeholders/48x48.png" alt="Placeholder image">
        </figure>
        </div>
        <hr>
        <div class="box is-inline"><strong><%= @listing.category.name %></strong></div>
        <div class="box is-inline"><strong>$<%= @listing.price / 100 %></strong></div>
        <div class="box is-inline"><strong>Delivery Time: <%= @listing.delivery_time %> Days</strong></div>
        <figure class="image is-4x3">
            <img src="https://bulma.io/images/placeholders/640x480.png" alt="Placeholder image">
        </figure>
        <p>
          <strong>Description:</strong>
          <%= @listing.description %>
        </p>
      </div>
    </div>
    </div>
  </div>
  <div class="column is-one-quarter is-offset-1">
    <%= link_to "Purchase",  new_listing_order_path(@listing), class: "button is-large is-fullwidth"%>
  </div>
</div>