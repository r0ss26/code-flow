<p id="notice"><%= notice %></p>

<h1>Employments</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Position</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employments.each do |employment| %>
      <tr>
        <td><%= employment.company %></td>
        <td><%= employment.position %></td>
        <td><%= employment.start_date %></td>
        <td><%= employment.end_date %></td>
        <td><%= link_to 'Show', user_employment_path(@user, employment) %></td>
        <td><%= link_to 'Edit', edit_user_employment_path(@user, employment) %></td>
        <td><%= link_to 'Destroy', user_employment_path(@user, employment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

