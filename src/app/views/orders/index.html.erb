<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Listing</th>
      <th>Cost</th>
      <th>Paid</th>
      <th>Completed</th>
      <th>Buyer</th>
      <th>Seller</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.listing_id %></td>
        <td><%= order.cost %></td>
        <td><%= order.paid %></td>
        <td><%= order.completed %></td>
        <td><%= order.buyer %></td>
        <td><%= order.seller %></td>
        <td><%= link_to 'Show', listing_orders_path %></td>
        <td><%= link_to 'Edit', edit_listing_order_path(@listing.id, order.id) %></td>
        <td><%= link_to 'Destroy', listing_orders_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

