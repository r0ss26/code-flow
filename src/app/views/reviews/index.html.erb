<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Rating</th>
      <th>Description</th>
      <th>Review poster</th>
      <th>Review receiver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.order_id %></td>
        <td><%= review.rating %></td>
        <td><%= review.description %></td>
        <td><%= review.review_poster_id %></td>
        <td><%= review.review_receiver_id %></td>
        <td><%= link_to 'Show', listing_order_review_path(@listing, @order, review) %></td>
        <td><%= link_to 'Edit', edit_listing_order_review_path(@listing, @order, review) %></td>
        <td><%= link_to 'Destroy', listing_order_review_path(@listing, @order, review), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_listing_order_review_path %>
